@using Microsoft.AspNetCore.Identity
@using ISPYZU2.Areas.Identity.Data

@inject SignInManager<ISPYZU2User> SignInManager
@inject UserManager<ISPYZU2User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-outline-success bg-light my-2 my-lg-0" style="margin-left:5px;">Sign Out</button>
        </form>
    </li>
}
else
{
    
    <li class="nav-item">
        <form class="form-inline">
            <button class="btn btn-outline-success bg-light my-2 my-lg-0" style="margin-left:5px;" asp-area="Identity" asp-page="/Account/Login">Sign In</button>
        </form>
    </li>
}
</ul>
